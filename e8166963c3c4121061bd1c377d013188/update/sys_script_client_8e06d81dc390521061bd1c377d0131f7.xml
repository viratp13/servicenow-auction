        <applies_extended>false</applies_extended>
        <condition/>
        <description>Validates starting_price field as soon as the user enters a value, ensuring it is non-negative.</description>
        <field>starting_price</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Validate Starting Price</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {

    if (isLoading) {
        return;
    }
	
    if (newValue < 0) {
        g_form.showFieldMsg('starting_price', 'Please enter a non-negative value.', 'error');
    } else {
        g_form.clearMessages();
        g_form.hideFieldMsg('starting_price');
    }
}
]]></script>
